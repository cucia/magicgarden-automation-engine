# ============================================================
# CORE ENGINE SETTINGS
# ============================================================

# Main loop tick speed (seconds)
# Lower = faster but more aggressive
# Recommended: 0.15 – 0.3
ENGINE_TICK=3.0

# Idle keep-alive threshold (seconds)
# If no action happens for this time, bot moves character
IDLE_THRESHOLD=15


# ============================================================
# SESSION & CONNECTION MANAGEMENT
# ============================================================

# Persist browser session (cookies, localStorage, login)
# true  = login once, session survives docker restart
# false = login required every time
PERSIST_SESSION=true

# Browser profile directory (DO NOT CHANGE unless you know why)
BROWSER_PROFILE_DIR=/app/browser-profile

# Auto reconnect when this session is kicked
# (e.g., when you open the game on another device)
AUTO_RECONNECT=true

# Minutes to wait before retrying connection
# Recommended: 3 – 10
RECONNECT_WAIT_MINUTES=2


# ============================================================
# MODULE TOGGLES
# ============================================================

# Enable automatic harvesting
ENABLE_HARVEST=false

# Enable automatic buying from seed shop
ENABLE_BUY=false

# Enable automatic selling when inventory is full
ENABLE_SELL=false

# Enable automatic planting
ENABLE_PLANT=false


# ============================================================
# HARVEST SETTINGS
# ============================================================

# Harvest tier condition
# Only plots matching this tier will be harvested
#
# AVAILABLE TIERS:
# S  -> Highest value combinations (e.g. frozen + rare)
# A  -> High value combinations
# B  -> Medium value
# C  -> Low value
#
# (Exact mapping handled in harvest module)
HARVEST_TIER=C


# ============================================================
# BUY SETTINGS
# ============================================================

# Allowed seeds to buy when seed shop restocks
# Bot will ONLY buy seeds listed here
#
# AVAILABLE SEEDS (example – update as game evolves):
# carrot
# potato
# strawberry
# cactus
# coconut
# pumpkin
# wheat
#
# Use comma-separated list (no spaces)
BUY_ALLOWED_SEEDS=cactus,coconut


# ============================================================
# DEBUG / LOGGING
# ============================================================

# Enable WebSocket debug logs
# true  = log WS events (useful for development)
# false = silent mode
DEBUG_WS=true
